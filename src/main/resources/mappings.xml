            <basic name="bookId">
                <column name="book_id"/>
            </basic>
            <basic name="userId">
                <column name="user_id"/>
            </basic>
            <basic name="dateToRent">
                <column name="date_to_rent"/>
            </basic>
            <basic name="dateToReturn">
                <column name="date_to_return"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
