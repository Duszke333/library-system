            <basic name="userId">
                <column name="user_id"/>
            </basic>
            <basic name="rentalId">
                <column name="rental_id"/>
            </basic>
            <basic name="dateAdded">
                <column name="date_added"/>
            </basic>
            <basic name="datePaid">
                <column name="date_paid"/>
            </basic>
            <basic name="amount">
                <column name="amount"/>
            </basic>
            <basic name="cause">
                <column name="cause"/>
            </basic>
        </attributes>
    </entity>
