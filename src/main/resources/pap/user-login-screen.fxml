<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pap.UserLoginScreenController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please Log in" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Text>
      <TextField fx:id="loginEmail" promptText="Email">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="loginPassword" promptText="Password">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </PasswordField>
      <HBox spacing="20.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginPressed" text="Log in" />
            <Text fx:id="loginStatus" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Email or password incorrect!" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#createAccountPressed" text="Create account" />
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</VBox>
