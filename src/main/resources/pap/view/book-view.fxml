<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="520.0" prefWidth="684.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pap.controllers.BookViewController">
   <children>
      <Label fx:id="titleLabel" layoutX="58.0" layoutY="57.0" text="TITLE" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="authorLabel" layoutX="55.0" layoutY="96.0" text="AUTHOR" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="genreLabel" layoutX="55.0" layoutY="134.0" text="GENRE" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="publicationYearLabel" layoutX="58.0" layoutY="167.0" text="PUBLICATION YEAR" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="languageLabel" layoutX="59.0" layoutY="207.0" text="LANGUAGE" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="pageCountLabel" layoutX="56.0" layoutY="243.0" text="PAGE COUNT" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="publisherLabel" layoutX="58.0" layoutY="277.0" text="PUBLISHER" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="isAvailableLabel" layoutX="59.0" layoutY="311.0" text="AVAILABLE" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="dateAddedLabel" layoutX="58.0" layoutY="342.0" text="DATE ADDED" AnchorPane.leftAnchor="50.0" />
      <Label fx:id="grade" layoutX="50.0" layoutY="374.0" text="AVERAGE GRADE" />
      <VBox alignment="CENTER" layoutX="355.0" layoutY="90.0">
         <children>
            <Button fx:id="actionButton" mnemonicParsing="false" onAction="#orderPressed" text="ORDER" />
            <Label fx:id="actionLabel" />
         </children>
      </VBox>
      <TextArea fx:id="descriptionLabel" editable="false" layoutX="317.0" layoutY="228.0" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
      <VBox alignment="CENTER" layoutX="47.0" layoutY="411.0" prefHeight="91.0" prefWidth="215.0">
         <children>
            <Text fx:id="gradeText" strokeType="OUTSIDE" strokeWidth="0.0" text="Your grade: 1.0" />
            <Slider fx:id="gradeSlider" blockIncrement="0.5" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
            <Button fx:id="gradeButton" disable="true" mnemonicParsing="false" onAction="#gradeButtonPressed" text="Submit your grade" />
            <Text fx:id="gradeStatus" strokeType="OUTSIDE" strokeWidth="0.0" text="You must be logged in to do that!" />
         </children>
      </VBox>
      <Button fx:id="wishButton" layoutX="470.0" layoutY="31.0" mnemonicParsing="false" onMouseClicked="#wishButtonClicked" text="Add a book to the wishlist" />
      <Label fx:id="wishLabel" layoutX="470.0" layoutY="65.0" />
      <VBox alignment="CENTER" layoutX="307.0" layoutY="146.0">
         <children>
            <Button fx:id="returnButton" mnemonicParsing="false" onAction="#returnPressed" text="Return book" />
            <Text fx:id="returnText" strokeType="OUTSIDE" strokeWidth="0.0" text="You must return this book before {date}" />
         </children>
      </VBox>
   </children>
</AnchorPane>
