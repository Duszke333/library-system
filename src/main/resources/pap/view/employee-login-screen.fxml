<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pap.controllers.EmployeeLoginScreenController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Log into your employee account" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Text>
      <TextField fx:id="loginUsername" promptText="Username">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="loginPassword" promptText="Password">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </PasswordField>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonPressed" text="Log in" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
            <Text fx:id="loginStatus" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Username or password incorrect!" visible="false" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Region layoutX="79.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="createAccountButton" onAction="#createAccountButtonPressed" alignment="BOTTOM_RIGHT" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="Create account" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
