   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add book">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <TextField fx:id="bookISBN" promptText="ISBN">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="bookTitle" promptText="Title">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="bookAuthor" promptText="Author">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="bookGenre" promptText="Genre">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="bookPublicationYear" promptText="Publication year">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="bookLanguage" promptText="Language">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="bookPageCount" promptText="Page count">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="bookPublisher" promptText="Publisher">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextArea fx:id="bookDescription" promptText="Description">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextArea>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Button minWidth="70.0" mnemonicParsing="false" onAction="#addBook" text="Add book" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Text fx:id="statusMessage" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="All fields except Description must be filled!" visible="false" wrappingWidth="992.1367263793945">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
