<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pap.controllers.BranchManagerController">
   <children>
      <Text fx:id="workingMode" strokeType="OUTSIDE" strokeWidth="0.0" text="Create a new branch" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Text>
      <TextField fx:id="nameInput" prefHeight="25.0" prefWidth="565.0" promptText="Branch name">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="countryInput" prefHeight="25.0" prefWidth="565.0" promptText="Country">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="cityInput" prefHeight="25.0" prefWidth="394.0" promptText="City">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="postalCodeInput" promptText="Postal code">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="streetInput" prefHeight="25.0" prefWidth="331.0" promptText="Street">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="houseNumberInput" prefHeight="25.0" prefWidth="114.0" promptText="House number">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <TextField fx:id="flatNumberInput" prefHeight="25.0" prefWidth="103.0" promptText="Flat number (optional)">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <HBox alignment="CENTER" spacing="20.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <Button fx:id="perform" mnemonicParsing="false" onAction="#create" text="Create branch">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Text fx:id="operationStatus" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="All fields except flat number must be filled!" textAlignment="CENTER" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#goBack" text="Go back" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
